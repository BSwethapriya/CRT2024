import java.util.*;

class Max
{
public static void main(String args[])
{
Scanner s=new Scanner(System.in);
int n=s.nextInt();
int a[]=new int[n];
for(int i=0;i<n;i++)
{
 a[i]=s.nextInt();
}
int max=a[0],k=-1,i;
for(i=1;i<n;i++)
{
if(max<a[i])
{
  max=a[i];
  k=i;
}
}
System.out.println(max);
System.out.println(i);
}
}
